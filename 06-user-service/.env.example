# Application Settings
APP_NAME="Gravity User Service"
API_VERSION="1.0.0"
DEBUG=true
LOG_LEVEL="INFO"

# Server Configuration
HOST="0.0.0.0"
PORT=8082
WORKERS=4

# Database (PostgreSQL)
DATABASE_URL="postgresql+asyncpg://user_service:password@localhost:5433/user_db"
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Redis
REDIS_URL="redis://localhost:6379/2"
REDIS_MAX_CONNECTIONS=50
REDIS_SESSION_TTL=86400
REDIS_CACHE_TTL=3600

# Authentication
AUTH_SERVICE_URL="http://localhost:8081"
JWT_SECRET_KEY="your-secret-key-change-in-production"
JWT_ALGORITHM="HS256"

# File Service
FILE_SERVICE_URL="http://localhost:8084"
MAX_AVATAR_SIZE=5242880
ALLOWED_AVATAR_TYPES="image/jpeg,image/png,image/webp"

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"
CORS_CREDENTIALS=true

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Session Management
MAX_ACTIVE_SESSIONS=5
SESSION_REFRESH_THRESHOLD=3600

# Monitoring
PROMETHEUS_ENABLED=true

# Service Discovery
SERVICE_DISCOVERY_URL="http://localhost:8500"
SERVICE_ID="user-service-1"
SERVICE_NAME="user-service"

# Logging
JSON_LOGS=false
