# Common environment variables template for all services
# Copy this file to .env in each service directory and customize

# Application
APP_NAME=gravity-microservice
APP_ENV=development
DEBUG=True
LOG_LEVEL=DEBUG

# Database - PostgreSQL
DATABASE_URL=postgresql+asyncpg://gravity:gravity_secret_2025@localhost:5432/gravity
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=False

# Redis
REDIS_URL=redis://:redis_secret_2025@localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=True

# RabbitMQ
RABBITMQ_URL=amqp://gravity:rabbitmq_secret_2025@localhost:5672/
CELERY_BROKER_URL=amqp://gravity:rabbitmq_secret_2025@localhost:5672/
CELERY_RESULT_BACKEND=redis://:redis_secret_2025@localhost:6379/1

# Kafka (Optional)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=gravity-consumers

# Service Discovery - Consul
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_SCHEME=http

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=True
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=*

# API Settings
API_V1_PREFIX=/api/v1
API_TITLE=Gravity Microservice
API_DESCRIPTION=Enterprise-grade microservice
API_VERSION=1.0.0

# Monitoring
PROMETHEUS_ENABLED=True
JAEGER_ENABLED=True
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Email (for notification service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@gravity.com

# SMS (for notification service)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AWS (for file storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=gravity-files

# Payment Gateway
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-webhook-secret

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
