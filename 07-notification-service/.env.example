# ================================================================================
# Notification Service - Environment Configuration
# ================================================================================
# Copy this file to .env and update with your actual values

# Application
APP_NAME=Gravity Notification Service
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8083

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://notification_service:password@localhost:5433/notification_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/3
REDIS_MAX_CONNECTIONS=50
REDIS_CACHE_TTL=3600

# Authentication
AUTH_SERVICE_URL=http://localhost:8081
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@gravity.com
SMTP_FROM_NAME=Gravity Platform
SMTP_USE_TLS=true
SMTP_TIMEOUT=10

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/api/v1/notifications/sms/webhook
TWILIO_ENABLED=false

# Push Notifications (Firebase)
FIREBASE_CREDENTIALS_PATH=./config/firebase-credentials.json
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_ENABLED=false

# APNs (Apple Push Notification Service)
APNS_CERT_PATH=./config/apns-cert.pem
APNS_KEY_PATH=./config/apns-key.pem
APNS_ENABLED=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
EMAIL_RATE_LIMIT=100
SMS_RATE_LIMIT=20

# Retry Logic
MAX_RETRY_ATTEMPTS=5

# Service Discovery
SERVICE_DISCOVERY_URL=http://localhost:8500
SERVICE_ID=notification-service-1
SERVICE_NAME=notification-service

# Celery
CELERY_BROKER_URL=redis://localhost:6379/4
CELERY_RESULT_BACKEND=redis://localhost:6379/5

# Monitoring
PROMETHEUS_ENABLED=true
JSON_LOGS=false
