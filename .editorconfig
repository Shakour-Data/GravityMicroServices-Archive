# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88  # Black formatter default

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Shell scripts
[*.sh]
indent_size = 2

# PowerShell scripts
[*.ps1]
indent_size = 4

# Dockerfile
[Dockerfile]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Git config
[.gitattributes]
indent_size = 2

# Docker Compose
[docker-compose*.yml]
indent_size = 2
