# Service Configuration
SERVICE_NAME=template-service
SERVICE_VERSION=1.0.0
SERVICE_PORT=8000
ENVIRONMENT=development

# API Configuration
API_V1_PREFIX=/api/v1
DEBUG=true
RELOAD=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/template_service
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Service Discovery (Consul)
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_SCHEME=http
SERVICE_HEALTH_CHECK_INTERVAL=10s
SERVICE_HEALTH_CHECK_TIMEOUT=5s

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/service.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
JAEGER_HOST=localhost
JAEGER_PORT=6831

# External Services
AUTH_SERVICE_URL=http://localhost:8001
NOTIFICATION_SERVICE_URL=http://localhost:8002
API_GATEWAY_URL=http://localhost:8080

# Cache Configuration
CACHE_TTL=300
CACHE_ENABLED=true

# Worker Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30

# Test Configuration (only for testing)
TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/template_service_test
