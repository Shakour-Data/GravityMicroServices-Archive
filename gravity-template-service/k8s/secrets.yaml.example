# Example secrets file - DO NOT COMMIT
# Create actual secrets using kubectl:
# kubectl create secret generic template-service-secrets \
#   --from-literal=database-url='postgresql+asyncpg://user:pass@host:5432/db' \
#   --from-literal=redis-url='redis://host:6379/0' \
#   --from-literal=secret-key='your-secret-key' \
#   -n gravity

apiVersion: v1
kind: Secret
metadata:
  name: template-service-secrets
  namespace: gravity
  labels:
    app: template-service
type: Opaque
stringData:
  database-url: "postgresql+asyncpg://postgres:postgres@postgres.gravity.svc.cluster.local:5432/template_service"
  redis-url: "redis://redis.gravity.svc.cluster.local:6379/0"
  secret-key: "CHANGE-THIS-IN-PRODUCTION"
  
  # JWT Configuration
  algorithm: "HS256"
  access-token-expire-minutes: "30"
  refresh-token-expire-days: "7"

  # External Services
  auth-service-url: "http://auth-service.gravity.svc.cluster.local"
  notification-service-url: "http://notification-service.gravity.svc.cluster.local"
  api-gateway-url: "http://api-gateway.gravity.svc.cluster.local"
